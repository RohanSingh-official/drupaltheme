{#
/**
 * @file
 * FOSSEE theme page template - Enhanced Official Version
 * Template sections match the design requirements with numbered regions
 */
#}

{# Section 1: Top Advertisement Section #}
<div class="top-advt section-1">
  <div class="container">
    <div class="advt-content">
      {% if page.top_advt %}
        {{ page.top_advt }}
      {% elseif is_front %}
        <p class="top-advt-placeholder">ADVT / Announcement Area</p>
      {% endif %}
    </div>
  </div>
</div>

{# Section 2: Header with Navigation Section #}
<header class="fossee-header section-2">
  <div class="container">
    <div class="header-brand">
      <div class="fossee-logo">
        <img src="{{ base_path ~ directory }}/images/fossee-logo.png" alt="FOSSEE Logo" class="logo-image">
      </div>
      <div class="fossee-text">
        <h1 class="fossee-title">
          <a href="{{ path('<front>') }}">{{ site_name|default('fossee') }}</a>
        </h1>
        <div class="fossee-slogan">{{ site_slogan|default('Free/Libre and Open Source Software for Education') }}</div>
      </div>
    </div>
  </div>
  
  {# Navigation Bar - Part of Header Section #}
  <nav class="main-navigation">
    <div class="container">
      {% if page.navigation %}
        {{ page.navigation }}
      {% else %}
        <ul class="nav-menu">
          <li><a href="#">Home</a></li>
          <li><a href="#">Resources</a></li>
          <li><a href="#">Statistics</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">Blog</a></li>
          <li><a href="#">Newsletter</a></li>
          <li><a href="#">Fellowship</a></li>
          <li><a href="#">Events</a></li>
        </ul>
      {% endif %}
    </div>
  </nav>
</header>

{% if is_front %}
{# Section 3: Hero Section with Dr. Kalam - Front Page Only #}
<section class="hero-section section-3">
  <div class="container hero-content">
    <div class="hero-image">
      <img src="{{ base_path ~ directory }}/images/kalam.svg" alt="Dr. A. P. J. Abdul Kalam">
    </div>
    <div class="hero-text">
      <blockquote class="hero-quote">
        "The most unfortunate thing is that India still seems to believe in proprietary solutions... In India, open source code software will have to come and stay in a big way for the benefit of our billion people."
      </blockquote>
      <cite class="hero-author">Dr. A. P. J. Abdul Kalam</cite>
    </div>
  </div>
</section>

{# Section 4: News and Notice Section - Front Page Only #}
<section class="news-notice-section section-4">
  <div class="container">
    {% if page.news_notice %}
      {{ page.news_notice }}
    {% else %}
      <div class="news-notice-grid">
        <div class="current-news">
          <h3>Current News</h3>
          <div class="news-content">
            <div class="news-image">
              <img src="{{ base_path ~ directory }}/images/conference-poster.jpg" alt="Conference Poster" class="news-poster">
            </div>
            <div class="news-text">
              <div class="news-item">
                <div class="news-title">International Conference on Open source for Chemical Process Simulation 2019</div>
                <div class="news-date">29 & 30 November, 2019</div>
                <div class="news-description">In collaboration with IIT Bombay on 29 & 30 November, 2019.</div>
              </div>
              <a href="#" class="news-more">[More]</a>
            </div>
          </div>
        </div>
        <div class="forum-notice">
          <h3>Forum Notice</h3>
          <div class="forum-content">
            <p>For assistance in installation and use of Free/Libre and Open Source Software, we recommend visiting the FOSSEE Forum. It is monitored by domain experts.</p>
            <a href="#" class="forum-link">Read More...</a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>
{% endif %}

{# Main Content #}
<main class="main-content">
  <div class="container">
    {{ page.content }}
  </div>
</main>

{% if is_front %}
{# Section 5: Activities Section - Front Page Only #}
<section class="activities-section section-5">
  <div class="container">
    {% if page.activities %}
      {{ page.activities }}
    {% else %}
      <div class="activities-content">
        <div class="activities-left">
          <div class="activity-cards">
            <div class="activity-card activity-case-study" data-activity="case-study">Case Study</div>
            <div class="activity-card activity-lab-migration" data-activity="lab-migration">Lab Migration</div>
            <div class="activity-card activity-niche" data-activity="niche">Niche Software Activities</div>
            <div class="activity-card activity-textbook" data-activity="textbook">Textbook Companion</div>
            <div class="activity-card activity-workshop" data-activity="workshop">Workshop & Conferences</div>
          </div>
        </div>
        <div class="activities-right">
          <div class="activities-info">
            <h3>Activities</h3>
            <div class="activity-description" id="activity-content">
              <div class="activity-item active" data-activity="case-study">
                <h4>CASE STUDY</h4>
                <p>Case studies demonstrate successful migration from proprietary to open source software across various domains, showcasing practical implementations and outcomes.</p>
                <a href="#" class="activity-more">>></a>
              </div>
              <div class="activity-item" data-activity="lab-migration">
                <h4>LAB MIGRATION</h4>
                <p>Lab Migration involves transitioning academic and research laboratories from proprietary software to open source alternatives, enhancing accessibility and reducing costs.</p>
                <a href="#" class="activity-more">>></a>
              </div>
              <div class="activity-item" data-activity="niche">
                <h4>NICHE SOFTWARE ACTIVITIES</h4>
                <p>Specialized software development activities focusing on domain-specific open source solutions for education and research communities.</p>
                <a href="#" class="activity-more">>></a>
              </div>
              <div class="activity-item" data-activity="textbook">
                <h4>TEXTBOOK COMPANION</h4>
                <p>Creating comprehensive code companions for textbooks using open source tools, making technical education more accessible and practical.</p>
                <a href="#" class="activity-more">>></a>
              </div>
              <div class="activity-item" data-activity="workshop">
                <h4>WORKSHOP & CONFERENCES</h4>
                <p>Organizing workshops, conferences, and training programs to promote the adoption of open source software in educational institutions.</p>
                <a href="#" class="activity-more">>></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{# Features Section - Front Page Only #}
<section class="features-section">
  <div class="container">
    {% if page.features %}
      {{ page.features }}
    {% else %}
      <div class="features-grid">
        <div class="poster-section">
          <h3>FOSSEE Poster</h3>
          <img src="{{ base_path ~ directory }}/images/poster1.jpg" alt="FOSSEE Poster" class="poster-image">
        </div>
        <div class="poster-section">
          <h3>FOSSEE Poster</h3>
          <img src="{{ base_path ~ directory }}/images/poster2.jpg" alt="FOSSEE Poster" class="poster-image">
        </div>
        <div class="social-media">
          <h3>FOSSEE Social Media</h3>
          <div class="social-icons">
            <a href="#" class="social-icon facebook">F</a>
            <a href="#" class="social-icon youtube">Y</a>
            <a href="#" class="social-icon linkedin">L</a>
            <a href="#" class="social-icon instagram">I</a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>
{% endif %}

